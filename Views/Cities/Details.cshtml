@model TravelGuide.Models.City

@{
    ViewData["Title"] = "Details";
    var cityTours = Model.CityTours.OrderBy(e => e.CityID).ToList();
}
<style>
    body {
        background-image: linear-gradient(dodgerblue, wheat);
    }
</style>
<h1>About</h1>

<div>
    <h4>@Model.CityName</h4>
    <hr />
    
</div>
<div class="mb-3">
    @foreach(var item in cityTours)
    {
        <h2>@item.Description</h2><br />
        <h2>@item.Itinerary</h2>
        <h2>@item.Duration hours</h2>
        
    }
</div>
<div class="mb-3">
    <a asp-action="Index">Back to List</a>
</div>
