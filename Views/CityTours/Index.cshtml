@using TravelGuide.Models
@model IEnumerable<TravelGuide.Models.CityTour>

@{
    ViewData["Title"] = "Index";
}

<h1 style="font-size: 40px; font-family: Georgia, Times New Roman , Times, serif; font-weight: 700;">City Tours</h1>

<p>
    <a class="btn btn-primary btn-outline-light" asp-action="Create">Add New CityTour</a>
</p>

        <table class="table table-striped table-hover table-dark">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Itinerary)
                    </th>
            
                    <th>
                        @Html.DisplayNameFor(model => model.Duration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Itinerary)
                    </td>
            
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CityID)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CityTourID">Edit</a> 
                        <a class="btn btn-secondary"  asp-action="Details" asp-route-id="@item.CityTourID">Details</a> 
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CityTourID">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>

<style>
    body {
        background-image: url('../images/city.jpg');
        background-size: cover;
        background-position: center;
    }
</style>
