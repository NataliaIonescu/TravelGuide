@model IEnumerable<TravelGuide.Models.Hotel>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:white; font-size: 40px; font-family: Georgia, Times New Roman , Times, serif; font-weight: 700;">Hotels</h1>

<p>
    <a class="btn btn-primary btn-outline-light" asp-action="Create">Add New Hotel</a>
</p>
<table class="table table-striped table-hover table-dark">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HotelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HotelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.HotelID">Edit</a> 
                    <a class="btn btn-secondary"  asp-action="Details" asp-route-id="@item.HotelID">Details</a> 
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.HotelID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<style>
    body {
        background-image: url('../images/hotel.jpg');
        background-size: cover;
        background-position: center;
    }
</style>

