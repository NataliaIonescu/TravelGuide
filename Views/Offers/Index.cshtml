@using TravelGuide.Models
@model IEnumerable<TravelGuide.Models.Offer>

@{
    ViewData["Title"] = "Index";
}

<h1 style="font-size: 40px; font-family: Georgia, Times New Roman , Times, serif; font-weight: 700;">Offers</h1>

<p>
    <a class="btn btn-primary btn-outline-light" asp-action="Create">Add New Offer</a>
</p>
<table class="table table-striped table-hover table-dark">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityTour)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CityTourID)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.OfferID">Edit</a>
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.OfferID">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.OfferID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<style>
    body {
        background-image: url('../images/offer4.jpg');
        background-size:cover;
        background-position: center;
        background-repeat:no-repeat;
    }
</style>