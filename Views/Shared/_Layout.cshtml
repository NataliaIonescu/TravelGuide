<!DOCTYPE html>
@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> UserManager
@inject SignInManager<AppUser> SignInManager

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelGuide</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TravelGuide.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" style="font-size: 30px; font-family: Georgia, Times New Roman , Times, serif; font-weight: bold;" asp-area="" asp-controller="Home" asp-action="Index">TravelGuide</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="font-size: 20px; font-family: Georgia, Times New Roman , Times, serif;">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item" style="font-size: 20px; font-family: Georgia, Times New Roman , Times, serif;">
                                    <a class="nav-link text-light" asp-area="" asp-controller="CityTours" asp-action="Index">City Tours</a>
                                </li>
                                <li class="nav-item" style="font-size: 20px; font-family: Georgia, Times New Roman , Times, serif;">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Hotels" asp-action="Index">Hotels</a>
                                </li>
                                <li class="nav-item" style="font-size: 20px; font-family: Georgia, Times New Roman , Times, serif;">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Offers" asp-action="Index">OffersIndex</a>
                                </li>
                                <li class="nav-item" style="font-size: 20px; font-family: Georgia, Times New Roman , Times, serif;">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="About">About</a>
                                </li>
                                <li class="nav-item" style="font-size: 20px; font-family: Georgia, Times New Roman , Times, serif;">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a>
                                </li>
                                <li class="nav-item" style="font-size: 20px; font-family: Georgia, Times New Roman , Times, serif;">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Cities" asp-action="Index">Cities</a>
                                </li>
                                <li class="nav-item" style="font-size: 20px; font-family: Georgia, Times New Roman , Times, serif;">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Offers" asp-action="BookOffers">Book Offers</a>
                                </li>
                            }

                            else if ( User.IsInRole("User"))
                            {
                                
                                <li class="nav-item" style="font-size: 20px; font-family: Georgia, Times New Roman , Times, serif;">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="About">About</a>
                                </li>
                                <li class="nav-item" style="font-size: 20px; font-family: Georgia, Times New Roman , Times, serif;">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a>
                                </li>
                                <li class="nav-item" style="font-size: 20px; font-family: Georgia, Times New Roman , Times, serif;">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Cities" asp-action="Index">Cities</a>
                                </li>
                                <li class="nav-item" style="font-size: 20px; font-family: Georgia, Times New Roman , Times, serif;">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Offers" asp-action="BookOffers">Book Offers</a>
                                </li>
                            }     
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" >
            &copy; 2023 - TravelGuide 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
